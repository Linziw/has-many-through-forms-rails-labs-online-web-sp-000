
<h3><%=@post.title%></h3>

<h3><%=@post.content%></h3>

<h3>Categories</h3>
<ul>
<%@post.categories.each do |category|%>
<li><%=category.name%></li>
<%end%>
</ul>

<h3>Comments</h3>
<ul>
<%@post.comments.each do |comment|%>
<li><%=comment.content%> - <%=link_to comment.user.username, user_path(comment)%></li>
<%end%>
</ul>





